<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title><%=title%></title>
  <link rel="stylesheet" href="css/ztracker.css">
  <link rel="shortcut icon" type="image/png" href="img/favicon.ico"/>
  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
  <section class="container">
  <div class="logo"><img src="img/website-logo.png" width="200" height="64" alt="ZTracker"/></div>
    <div class="login">
      <h1>Login</h1>
      <form method="post" action="<%= base_url+'login' %>" id="admin_login">
        <p><input type="text" name="email" value="" placeholder="Username or Email"></p>
        <p><input type="password" name="password" value="" placeholder="Password"></p>
        <p class="remember_me">
          <label>
            <input type="checkbox" name="remember_me" id="remember_me">
            Remember me
          </label>
        </p>
        <p class="submit"><input type="submit" name="commit" value="Login"></p>
        <span id="msg" style="color:red;"></span>
      </form>
    </div>
	
  </section>
<script src="js/jquery-1.11.1.min.js"></script>
<script>
$('#admin_login').on('submit',function (e) {
    e.preventDefault();
    $.ajax({
        type: "POST",
        url: "<%= base_url %>login",
        data: $('#admin_login').serialize(),
        dataType:'json',
        success: function (response){
            if(response.success == 'success'){
                window.location.href = "<%= base_url+"dashboard" %>";
            }else{ 
                $('#msg').text(response.error);
            }
        }
    });
});
</script>  
<div style="clear:both;"></div>
<div class="footerdiv"><hr/>Developed By <a target='_blank' href='http://www.zaax.com' style="color:#000;">ZAAX</a></div>
</body>
</html>